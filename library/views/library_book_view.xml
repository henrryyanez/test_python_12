<odoo>
    <data>
        <!--Vista Form รณ Formulario-->

        <record id="library_book_form_view" model="ir.ui.view">
            <field name="name">library book form</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <form string="Book Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="category_id"/>
                            <field name="category_ids" widget="many2many_tags"/>
                            <field name="category_idos" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--Vista tree รณ Lista-->
        <record id="library_book_tree_view" model="ir.ui.view">
            <field name="name">library book tree</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <tree string="Book Tree">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- Action View -->
        <record id="action_library_book" model="ir.actions.act_window">
            <field name="name">Book</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">library.book</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Crear Nuevos Libros
              </p>
            </field>
        </record>

        <!-- Creando Menus -->
        <menuitem id="library_root" name="Library" sequence="1"/>
        <menuitem id="library_category_level" name="Library" sequence="1" parent="library_root"/>
        <menuitem id="library_book"
                  parent="library_category_level"
                  name="Book"
                  action="action_library_book"
                  sequence="1"/>
    </data>
</odoo>